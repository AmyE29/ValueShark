<%- include('../partials/head'); -%>
<%- include('../partials/header'); -%>
<%- include('../partials/searchbar'); -%>




<div class="main"> 
 
  <h1 id="page-title">  Search Results </h1>
  <div id="searchResults">
    <!-- for each result render the data -->
      <h1 id="company-name"><%= symbol.name %></h1>
      <p id="symbol"><span>Symbol: &nbsp;</span><%= symbol.symbol %></p>
      <p><span>Price: &nbsp;</span><%= symbol.price %></p>
      <p><span>P/E: &nbsp;</span><%= symbol.pe %></p>
      <p><span>PEG: &nbsp;</span><%= symbol.peg %></p>
      <p><span>Profit Margin: &nbsp;</span><%= symbol.profitMargin %></p>
      <p><span>Market Cap: &nbsp;</span><%= symbol.marketCap %></p>
      <p><span>PB: &nbsp;</span><%= symbol.pb %></p>
    <form id="add-profile" action="/addPortfolio" method="POST">
      <input type='hidden' name='ticker' value='<%= symbol.symbol %>'>
      <input type='hidden' name='userID' value='<%= symbol.userID %>'> 
      <button id="addButton" type="submit"> <img class="icons" src="../img/stock.png" alt="logo">Add To Portfolio</button>
    </form>
  </div>
</div>
<%- include('../partials/portfolio'); -%>

<%- include('../partials/footer'); -%>